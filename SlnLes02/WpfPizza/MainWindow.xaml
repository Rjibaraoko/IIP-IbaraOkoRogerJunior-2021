<Window x:Class="WpfPizza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPizza"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Background="Beige" Margin="-10,0,10,0">
            <RadioButton x:Name="hot" Content="hot &amp; spicy" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="163,146,0,0" Checked="RadioButton_Checked"/>
            <RadioButton x:Name="seizoen" Content="4 seizoenen" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="163,166,0,0" Checked="RadioButton_Checked_1"/>
            <RadioButton x:Name="hawai" Content="hawai" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="163,186,0,0" Checked="RadioButton_Checked_2"/>
            <Label x:Name="pizzalbl" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="370,96,0,0" Width="332" Height="93"/>
            <Label Content="BESTEL JE PIZZA" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="135,49,0,0" Width="209" Height="45" FontSize="24"/>
            <Image x:Name="PizzaImg" HorizontalAlignment="Left" Height="172" VerticalAlignment="Top" Width="339" Margin="343,194,0,0"/>

        </Grid>
    </Grid>
</Window>
