<Window x:Class="WpfVolumeSlider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVolumeSlider"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.516,0.58">
        <Grid Background="LightSteelBlue"></Grid>
        <Label x:Name="Volumelbl" Content=" &#x9;VOLUME: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="321,196,0,0" Width="155"/>
        <Slider x:Name="SliderV" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="470" Margin="170,165,0,0" Minimum="0" Maximum="100" IsSnapToTickEnabled="True" TickFrequency="5" ValueChanged="Slider_ValueChanged" />

    </Grid>
</Window>
